;;; -*-Scheme-*-

;; Alias like "7x14" may not working, use the "X Logical Font Description".
;(define my-edwin-font "-misc-fixed-medium-r-*-*-14-*-*-*-*-*-*-*")
;(define my-edwin-font "-adobe-courier-bold-o-*-*-14-*-*-*-*-*-*-*")
(define my-edwin-font "-adobe-courier-medium-r-*-*-14-*-*-*-*-*-*-*")

((ref-command set-default-font) my-edwin-font)
((ref-command set-font) my-edwin-font)

((ref-command set-frame-size) 81 70)
((ref-command set-frame-position) 640 0)

(define my-background-color "rgb:22/22/22")
(define my-foreground-color "white")

((ref-command set-foreground-color) my-foreground-color)
((ref-command set-background-color) my-background-color)
((ref-command set-cursor-color) my-foreground-color)
